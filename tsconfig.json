{
  "compilerOptions": {
    "outDir": "compiled/",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "ES2017",
    "newLine": "LF",
    "baseUrl": ".",
    "paths": {
      "*": ["*"],
      "/scripts/*": ["src/*"]
    },
    "typeRoots": [],
    "module": "ESNext"
  }
}
